<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/{{ service_name }}/{{ service_name }}.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>{{ service_name }}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>365</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%logger] [%-10thread] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE"/>
    </root>

    <logger name="application" level="DEBUG" />
    <logger name="{{ groupId }}" level="ALL"/>

    <logger name="ch.qos.logback" level="INFO"/>
    <logger name="com.ning.http.client" level="OFF"/>
    <logger name="org.elasticsearch" level="INFO"/>
    <logger name="org.jboss.netty" level="OFF"/>

</configuration>
